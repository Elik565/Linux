{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active files",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/main.cpp",  // Указываем конкретные файлы
                "${fileDirname}/terminal.cpp",  // Указываем другие файлы
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$g++"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
