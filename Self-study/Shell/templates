#!/bin/sh

unset foo
echo ${foo:-bar}  #если foo не задана, то ей присваивается значение по умолчанию

foo=fud
echo ${foo:-bar} #выведится fud

foo=/usr/bin/X11/startx
echo ${foo#*/} # от начала отбрасывается наименьшая порция, совпадающая со строкой

echo ${foo##*/} # от начала отбрасывается наибольшая порция, совпадающая со строкой


bar=/usr/local/etc/local/networks
echo ${bar%local*} # от конца отбрасывается наименьшая порция, совпадающая со строкой

echo ${bar%%local*} # от конца отбрасывается наибольшая порция, совпадающая со строкой
